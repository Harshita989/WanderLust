<% layout("/layouts/boilerpplate.ejs") %>
    <%=success %>

        <body>
            <h1>All listings</h1>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% for (let listing of allListings) { %>
                        <div class="col">
                            <div class="card h-100">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="image"
                                    style="height: 20rem; object-fit: cover;">
                                <div class="card-body">
                                    <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: black;">
                                        <p class="card-text">
                                            <b>
                                                <%= listing.title %>
                                            </b><br>
                                            &#8377;<%= listing.price %> / night
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </body>

        </html>